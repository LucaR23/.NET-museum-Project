@model System.Collections.Generic.List<string>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        .container {
            text-align: center;
        }
        .back{
            float:left;
        }
        #main{
            margin-top:5%;
        }
    </style>
    <title>Inserimento nuovo reperto</title>
</head>
<body>
    <div class="container" id="container">
        @foreach (string s in Model)
        {
            <button type="submit" class="btn btn-info" onclick="getSelected('@s.ToString()')">@s.ToString()</button>
        }
    </div>

    <div class="back">
        <button type="submit" class="btn btn-dark"  onclick="location.href='/User/'"> back </button>
    </div>

    <div id="main">


    </div>

    <script>
        function getSelected(btn) {
            console.log(btn);
            $.ajax({
                url: "/User/Insert",
                type: "GET",
                data: { ins: btn },
                success: function (dt) {
                    $('#main').html(dt);
                },
                error: function () {
                    alert("Internal Error ");
                }          
            });
        }
    </script>
</body>

</html>

